{
  "name": "jrnl-mcp",
  "version": "1.0.0",
  "description": "Model Context Protocol server for jrnl CLI journal application",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jrnl-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "test": "jest",
    "test:unit": "jest unit.test",
    "test:integration": "jest integration.test",
    "test:all": "npm run test:unit && npm run test:integration",
    "test:ci": "npm run build && npm run lint && npm run test:all",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\""
  },
  "keywords": [
    "jrnl",
    "mcp",
    "model-context-protocol",
    "journal"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "latest",
    "date-fns": "^2.30.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@types/node": "^20.8.0",
    "@typescript-eslint/eslint-plugin": "^6.7.3",
    "@typescript-eslint/parser": "^6.7.3",
    "eslint": "^8.50.0",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
